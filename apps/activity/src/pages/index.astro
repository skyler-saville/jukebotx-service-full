---
const features = [
  "Share session links with the community",
  "Track the queue in real time",
  "Highlight the currently playing track",
  "Celebrate new submissions",
];

import activityScript from "../scripts/activity.ts?url";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>JukeBotx Activity</title>
  </head>
  <body>
    <main class="page">
      <section class="hero">
        <p class="eyebrow">JukeBotx</p>
        <h1>Activity</h1>
        <p class="lede">
          A lightweight activity view for Discord jam sessions. Launch this app to keep
          the crowd in sync.
        </p>
        <div class="actions">
          <a class="primary" href="#get-started">Get started</a>
          <a class="secondary" href="https://github.com" target="_blank" rel="noreferrer">
            Learn more
          </a>
          <button class="secondary" id="connect-discord" type="button">Connect Discord</button>
        </div>
      </section>

      <section id="get-started" class="card">
        <h2>What it will do</h2>
        <ul>
          {features.map((feature) => (
            <li>{feature}</li>
          ))}
        </ul>
      </section>

      <section class="card">
        <h2>Status</h2>
        <p>
          This Activity app is freshly bootstrapped with Astro. Add API calls and real-time
          updates once the endpoints are ready.
        </p>
      </section>

      <section class="card" id="now-playing">
        <h2>Now Playing</h2>
        <div class="track">
          <div class="artwork" aria-hidden="true"></div>
          <div>
            <p class="track-title">Waiting for playback...</p>
            <p class="track-meta">Once connected, the current track will appear here.</p>
          </div>
        </div>
      </section>

      <section class="card" id="up-next">
        <h2>Up Next</h2>
        <p class="status" id="auth-status">Awaiting Discord authentication.</p>
        <div class="diagnostics" id="diagnostics" hidden>
          <h3>Diagnostics</h3>
          <pre id="diagnostics-output">Waiting for connection...</pre>
        </div>
        <ul class="queue">
          <li class="muted">Queue will load after authentication.</li>
        </ul>
      </section>
    </main>
    <script type="module" src={activityScript}></script>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
    font-family: "Inter", system-ui, -apple-system, sans-serif;
    background: #0b0f18;
    color: #e6e9f4;
  }

  .page {
    min-height: 100vh;
    padding: 4rem 6vw;
    display: grid;
    gap: 2rem;
  }

  .hero {
    display: grid;
    gap: 1rem;
    max-width: 640px;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.75rem;
    color: #7aa2ff;
    margin: 0;
  }

  .lede {
    font-size: 1.1rem;
    color: #b7bedc;
  }

  .actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .actions a {
    padding: 0.75rem 1.5rem;
    border-radius: 999px;
    text-decoration: none;
    font-weight: 600;
  }

  .actions button {
    padding: 0.75rem 1.5rem;
    border-radius: 999px;
    font-weight: 600;
    border: 1px solid #2a3350;
    background: transparent;
    color: inherit;
    cursor: pointer;
  }

  .actions .primary {
    background: #7aa2ff;
    color: #0b0f18;
  }

  .actions .secondary {
    border: 1px solid #2a3350;
    color: inherit;
  }

  .card {
    background: #111827;
    border: 1px solid #1f2a44;
    border-radius: 1rem;
    padding: 1.5rem;
    max-width: 720px;
  }

  ul {
    padding-left: 1.2rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  .track {
    display: grid;
    grid-template-columns: 64px 1fr;
    gap: 1rem;
    align-items: center;
  }

  .artwork {
    width: 64px;
    height: 64px;
    border-radius: 0.75rem;
    background: #1f2a44;
    background-size: cover;
    background-position: center;
  }

  .track-title {
    font-size: 1.1rem;
    margin: 0 0 0.25rem;
  }

  .track-meta {
    margin: 0;
    color: #9aa3bf;
  }

  .queue {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.75rem;
  }

  .queue-title {
    display: block;
    font-weight: 600;
  }

  .queue-meta {
    display: block;
    color: #9aa3bf;
    font-size: 0.9rem;
  }

  .muted {
    color: #9aa3bf;
  }

  .status {
    color: #9aa3bf;
    margin: 0 0 1rem;
  }

  .diagnostics {
    border: 1px solid #2a3350;
    border-radius: 0.75rem;
    padding: 1rem;
    margin-bottom: 1rem;
    background: #0f1627;
  }

  .diagnostics h3 {
    margin: 0 0 0.5rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #7aa2ff;
  }

  .diagnostics pre {
    margin: 0;
    white-space: pre-wrap;
    word-break: break-word;
    color: #cbd5f5;
    font-size: 0.85rem;
  }
</style>
